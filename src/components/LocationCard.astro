---

const   {   location_title, 
            location_adress, 
            location_phone,
        } = Astro.props;

---

<div class="p-4 rounded-3xl border-2 border-zinc-950">
    <h4 class="text-3xl font-thunder font-bold uppercase">
        {location_title}
    </h4>
    <address>{location_adress}</address>
    <tel>Tel: <a>{location_phone}</a></tel>
</div>